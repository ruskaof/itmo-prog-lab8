<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:id="mainBorderPane" prefHeight="333.0" prefWidth="524.0"
            xmlns="http://javafx.com/javafx/8.0.171"
            fx:controller="com.ruskaof.client.presentation.controllers.MainScreenController">
    <left>
        <VBox spacing="5">
            <Button fx:id="tableBTN" onAction="#navigateToTableView" prefHeight="25.0" prefWidth="56.0" text="Table"/>
            <Button fx:id="objectsBTN" onAction="#navigateToVisualisation" text="Objects"/>
            <Button fx:id="scriptBTN" onAction="#navigateToExecute" prefHeight="25.0" prefWidth="56.0" text="Script"/>
        </VBox>
    </left>
    <center>
        <AnchorPane>
            <fx:include fx:id="tableView" source="screen_table_view.fxml" AnchorPane.bottomAnchor="0.0"
                        AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"/>

            <fx:include fx:id="visualisation" managed="false" source="screen_visualisation.fxml" visible="false"
                        AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                        AnchorPane.topAnchor="0.0"/>

            <fx:include fx:id="execute" managed="false" source="screen_execute.fxml" visible="false"
                        AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                        AnchorPane.topAnchor="0.0"/>

        </AnchorPane>
    </center>
</BorderPane>
