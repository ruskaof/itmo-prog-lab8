                  <Label text="&lt;="/>
                  <TextField fx:id="rightField" prefHeight="25.0" prefWidth="49.0"/>
               </children>
            </HBox>
            <HBox alignment="CENTER">
               <children>
                  <Button mnemonicParsing="false" onAction="#okClick" text="Ok"/>
               </children>
            </HBox>
            <Label fx:id="errorLabel"/>
